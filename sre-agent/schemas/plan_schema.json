{
  "type": "object",
  "additionalProperties": false,
  "required": ["decision", "current_hypothesis", "next_cmds", "missing_info", "stop_reason"],
  "properties": {
    "decision": {
      "type": "string",
      "enum": ["CONTINUE", "STOP"]
    },
    "current_hypothesis": {
      "type": "object",
      "additionalProperties": false,
      "required": ["category", "confidence", "why"],
      "properties": {
        "category": {
          "type": "string",
          "enum": ["CPU", "IO_WAIT", "RUN_QUEUE", "MEMORY", "GC", "LOCK_CONTEND", "NET", "EXTERNAL_DEP", "UNKNOWN"]
        },
        "confidence": {"type": "number", "minimum": 0, "maximum": 1},
        "why": {"type": "string"}
      }
    },
    "next_cmds": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["cmd_id", "purpose", "expected_signal", "timeout_sec", "priority"],
        "properties": {
          "cmd_id": {"type": "string"},
          "purpose": {"type": "string"},
          "expected_signal": {"type": "string"},
          "timeout_sec": {"type": "integer", "minimum": 1, "maximum": 300},
          "priority": {"type": "integer", "minimum": 1, "maximum": 5}
        }
      }
    },
    "missing_info": {
      "type": "array",
      "items": {"type": "string"}
    },
    "stop_reason": {
      "type": "string"
    },
    "notes": {
      "type": "string"
    }
  }
}
